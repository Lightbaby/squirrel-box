{
    "manifest_version": 3,
    "name": "松鼠收藏夹",
    "version": "1.1.0",
    "description": "智能收藏 Twitter/小红书内容，AI 自动摘要分类，支持语义搜索、灵感采集、多语言创作",
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "permissions": [
        "storage",
        "sidePanel",
        "tabs"
    ],
    "host_permissions": [
        "https://open.feishu.cn/*"
    ],
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "action": {
        "default_title": "松鼠收藏夹",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "options_page": "src/options/index.html",
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://www.twitter.com/*",
                "https://mobile.twitter.com/*",
                "https://x.com/*",
                "https://www.x.com/*",
                "https://mobile.x.com/*"
            ],
            "js": [
                "src/content/index.ts"
            ]
        },
        {
            "matches": [
                "https://www.xiaohongshu.com/*",
                "https://xiaohongshu.com/*"
            ],
            "js": [
                "src/content/xiaohongshu.ts"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icons/*"],
            "matches": [
                "https://twitter.com/*", 
                "https://www.twitter.com/*",
                "https://mobile.twitter.com/*",
                "https://x.com/*", 
                "https://www.x.com/*",
                "https://mobile.x.com/*",
                "https://www.xiaohongshu.com/*", 
                "https://xiaohongshu.com/*"
            ]
        }
    ]
}